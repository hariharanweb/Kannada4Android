<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="wrap_content" android:layout_height="wrap_content"
	android:orientation="vertical">

	<TextView android:text="@string/literalTranslation"
		android:id="@+id/translationLabel" android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:textSize="20sp"></TextView>

	<TextView android:id="@+id/translation" android:layout_width="wrap_content"
		android:layout_height="wrap_content"></TextView>

	<Button android:id="@+id/SpeakOut" android:background="@drawable/sound"
		android:layout_width="wrap_content" android:layout_height="wrap_content"
		android:visibility="invisible"></Button>

	<TextView android:text="@string/inKannada" android:id="@+id/inKannada"
		android:layout_width="wrap_content" android:layout_height="wrap_content"
		android:textSize="20sp"></TextView>

	<TextView android:id="@+id/inKannadaFont"
		android:layout_width="wrap_content" android:layout_height="wrap_content"
		android:textSize="30sp"></TextView>

	<Button android:id="@+id/MeaningFinderButton" android:text="@string/MeaningFinder"
		android:layout_width="wrap_content" android:layout_height="wrap_content" android:visibility="invisible"></Button>

	<TextView android:id="@+id/MeaningText" android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:visibility="invisible"></TextView>

	<TextView android:text="@string/WebSiteLink" android:id="@+id/WebSiteLink"
		android:layout_width="wrap_content" android:layout_height="wrap_content"
		android:textColor="#ffcc66"></TextView>
		
</LinearLayout>
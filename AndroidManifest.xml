<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      package="oldcask.android.Kannada4Android"
      android:versionCode="1"
      android:versionName="1.0">
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <application android:label="@string/app_name" android:icon="@drawable/kannadaicon">
        <activity android:name=".Kannada4Android"
                  android:label="@string/app_name" android:screenOrientation="landscape">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
		
    <activity android:name="CameraActivity" android:screenOrientation="landscape"></activity>
<activity android:name="ResultActivity" android:screenOrientation="landscape"></activity>
<activity android:name="ProcessingActivity" android:screenOrientation="landscape"></activity>
</application>
 <uses-permission android:name="android.permission.CAMERA" />
 <uses-feature android:name="android.hardware.camera" />
 <uses-feature android:name="android.hardware.camera.autofocus" />

</manifest> 